{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build server",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-std=c11",
        "-g",                         // debug symbols
        "-Wall",
        "-Wextra",
        "-pthread",                   // for pthreads
        "${workspaceFolder}/server.c",
        "${workspaceFolder}/thread_functions.c",
        "${workspaceFolder}/user_list.c",
        "${workspaceFolder}/messages.c",
        "-o",
        "${workspaceFolder}/server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
